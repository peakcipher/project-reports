	file = {Mathis and White - 2002 - Voids in the simulated local Universe.pdf:/home/peakcipher/Zotero/storage/YIGK8592/Mathis and White - 2002 - Voids in the simulated local Universe.pdf:application/pdf},
}

@article{gottlober_structure_2003,
