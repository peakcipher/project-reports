	journal = {MNRAS},
	author = {Wojtak, Radosław and Powell, Devon and Abel, Tom},
	month = jun,
	year = {2016},
	note = {ADS Bibcode: 2016MNRAS.458.4431W},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, dark matter, large-scale structure of Universe, methods: numerical},
	pages = {4431--4442},
